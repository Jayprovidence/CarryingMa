<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <Button
        android:id="@+id/httpPostBtn"
        android:text="@string/title_activity_http_post"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="httpPostBtn"/>
    <Button
        android:id="@+id/GCMlaunchBtn"
        android:text="@string/title_activity_gcmlaunch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="GCMlaunchBtn"/>
    <Button
        android:id="@+id/ExamTimeChangeBtn"
        android:text="@string/title_activity_exam_time_change"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="ExamTimeChangeBtn"/>
    <Button
        android:id="@+id/LoginBtn"
        android:text="@string/login_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="LoginBtn"/>
    <Button
        android:id="@+id/UserExamBtn"
        android:text="@string/user_exam_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="UserExamBtn"/>
    <Button
        android:id="@+id/GcmBtn"
        android:text="@string/gcm_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="GcmBtn"/>

    <!-- GCM Stuff-->
    <TextView android:text="@string/registering_message" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/informationTextView"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registrationProgressBar" />
    <!-- End of GCM Stuff-->
</LinearLayout>
